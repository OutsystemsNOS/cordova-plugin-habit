<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android"
        id="cordova-plugin-NOSHabit" version="0.0.1">
    <name>Habit</name>

    <description>An Android Cordova plugin</description>
    <license>NOS</license>

    <keywords>cordova,android,toast,message,alert</keywords>
  
    <engines>
        <!--<engine name="cordova-android" version=">=8.1.0" />-->
	  <engine name="cordova" version=">=3.2.0" />
    </engines>
	
    <js-module name="HabitPlugin" src="www/habit.js">
      <clobbers target="Habit" />
    </js-module>
  
    <platform name="android">
	    
	<feature name="HabitPlugin">
        	<param name="android-package" value="org.apache.cordova.Habit.HabitPlugin" />
    	</feature>
	    
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="HabitPlugin">
                <param name="android-package" value="io.habit.android.devicehealth"/>
            </feature>
        </config-file>				
	<framework src="src/Android/build.gradle" custom="true" type="gradleReference" />
	<framework src="build-extras.gradle" custom="true" type="gradleReference" />
	<lib-file src="library/DeviceHealth.aar" target="libs/DeviceHealth.aar" />
	        
	<source-file src="src/Android/HabitPlugin.java" target-dir="src/org/apache/cordova/Habit" />
	    
    </platform>
</plugin>

